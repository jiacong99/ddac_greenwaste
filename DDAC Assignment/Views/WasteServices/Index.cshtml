@model IEnumerable<DDAC_Assignment.Models.WasteServices>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.servicesTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.serviceDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.serviceMediaURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.serviceSize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.serviceLimit)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.servicesTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.serviceDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.serviceMediaURL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.serviceSize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.serviceLimit)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
