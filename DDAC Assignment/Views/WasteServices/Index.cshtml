@model IEnumerable<DDAC_Assignment.Models.WasteServices>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.servicesTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.serviceDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.serviceMediaURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.serviceSize)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.servicesTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.serviceDescription)
            </td>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.serviceMediaURL)" height="100"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.serviceSize)
            </td>
            <td>
                <!-- <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-outline-primary mr-2">View</a> -->
                <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-outline-warning mr-2">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-outline-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
