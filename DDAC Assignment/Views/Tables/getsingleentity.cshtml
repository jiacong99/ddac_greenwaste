@model DDAC_Assignment.Models.DriverEntity; 
@{
    ViewData["Title"] = "getsingleentity";
}

<h1>Search Result As Below: </h1>

<table border="1">
    <tr>
        <th>Driver First Name</th>
        <th>Driver Last Name</th>
        <th>Address</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th>Registration Date</th>
        <th>Delete Action</th>
        <th>Update Action</th>
    </tr>
    <tr>
        <td>@Model.PartitionKey</td>
        <td>@Model.RowKey</td>
        <td>@Model.Address </td>
        <td>@Model.Email </td>
        <td>@Model.PhoneNumber</td>
        <td>@Model.Timestamp </td>
        <td>
            <a asp-action="delete_entity" asp-route-partitionkey="@Model.PartitionKey" asp-route-rowkey="@Model.RowKey">
            <button>Delete</button>
            </a>
        </td>
        <td>
            <a asp-action="edit_entity" asp-route-partitionkey="@Model.PartitionKey" asp-route-rowkey="@Model.RowKey">
                <button>Edit</button>
            </a>
        </td>
    </tr>
</table>
